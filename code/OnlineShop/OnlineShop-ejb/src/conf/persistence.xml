<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="OnlineShop-ejbPU" transaction-type="JTA">
    <jta-data-source>java:module/mysql_dist_systems</jta-data-source>
    <class>entities.Catagory</class>
    <class>entities.Log</class>
    <class>entities.Product</class>
    <class>entities.Role</class>
    <class>entities.Sale</class>
    <class>entities.Stock</class>
    <class>entities.StoredBasket</class>
    <class>entities.User</class>
    <class>entities.UserBasket</class>
    <class>entities.UserProfile</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
